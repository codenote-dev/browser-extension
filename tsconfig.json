{
    "extends": "plasmo/templates/tsconfig.base",
    "exclude": ["node_modules"],
    "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
    "compilerOptions": {
        "inlineSourceMap": true,
        "strict": true,
        "paths": {
            "~*": ["./src/*"],
            "~components/*": ["./src/ui/shared/components/*"],
            "~utils": ["./src/lib/utils/index.ts"],
            "~utils/*": ["./src/lib/utils/*"]
        },
        "baseUrl": "."
    }
}
